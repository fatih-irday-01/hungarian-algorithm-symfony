{% extends 'base.html.twig' %}

{% block title %}Developers{% endblock %}

{% block body %}
    <h3 class="alert alert-info mt-3" >Yazılımcılar</h3>

    <a href="{{ path('developers_new') }}"  class="btn btn-primary float-lg-right mt-3 mb-5">Yazılımcı ekle</a>

    <table class="table bg-white">
    <thead class="thead-dark">
        <tr>
            <th scope="col">isim</th>
            <th scope="col" class="text-center">Yetenek Sınıfı</th>
            <th scope="col" class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    {% for developer in developers %}
        <tr>
            <td>{{ developer.name }}</td>
            <td class="text-center">{{ developer.ability }}</td>
            <td class="text-center">
                <a href="{{ path('developers_edit', {'id': developer.id}) }}">Düzenle</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
